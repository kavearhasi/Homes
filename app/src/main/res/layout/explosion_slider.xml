<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="@dimen/_5sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/explosionImageLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/explosionTextLeft"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/explosionImageRight"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.50"

        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:strokeWidth="@dimen/_2sdp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/explosionTextLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@id/explosionImageLeft"
        app:layout_constraintStart_toStartOf="@id/explosionImageLeft"
        app:layout_constraintTop_toBottomOf="@id/explosionImageLeft" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/explosionImageRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_5sdp"

        android:padding="@dimen/_1sdp"
        android:scaleType="centerCrop"

        app:layout_constraintBottom_toTopOf="@id/explosionTextRight"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/explosionImageLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.50"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:strokeWidth="@dimen/_2sdp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/explosionTextRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@id/explosionImageRight"
        app:layout_constraintStart_toStartOf="@id/explosionImageRight"
        app:layout_constraintTop_toBottomOf="@id/explosionImageRight" />
</androidx.constraintlayout.widget.ConstraintLayout>